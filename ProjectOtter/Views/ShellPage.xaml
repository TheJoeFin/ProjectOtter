<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ProjectOtter.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ProjectOtter.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProjectOtter.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Canvas.ZIndex="0"
            Command="{x:Bind ViewModel.BackCommand}"
            IsEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            Style="{ThemeResource DefaultButtonStyle}">
            <Viewbox Height="14">
                <SymbolIcon Symbol="Back" />
            </Viewbox>
        </Button>
        <StackPanel
            x:Name="AppTitleBar"
            Height="40"
            Margin="46,0,0,0"
            Padding="0"
            Canvas.ZIndex="1"
            IsHitTestVisible="True"
            Orientation="Horizontal"
            Spacing="10">
            <Image
                Width="32"
                Height="32"
                Margin="4,2"
                Source="/Assets/WindowIcon.ico" />
            <TextBlock
                x:Name="AppTitleBarText"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                TextWrapping="NoWrap" />
        </StackPanel>
        <Frame x:Name="NavigationFrame" Grid.Row="1" />
    </Grid>
</Page>
